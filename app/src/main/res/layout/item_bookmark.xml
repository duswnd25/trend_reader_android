<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmark_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_padding_quarter"
    android:layout_marginTop="@dimen/default_padding_quarter"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bookmark_profile"
            android:layout_width="@dimen/bookmark_favicon_size"
            android:layout_height="@dimen/bookmark_favicon_size"
            android:background="@android:color/white"
            android:contentDescription="@string/feed_image"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/bookmark_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bookmark_favicon_size"
            android:layout_gravity="bottom"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingEnd="@dimen/default_padding_quarter"
            android:paddingStart="@dimen/default_padding_quarter"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/feed_title"
            tools:text="제목" />
    </LinearLayout>
</android.support.v7.widget.CardView>